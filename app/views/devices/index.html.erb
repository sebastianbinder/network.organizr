<h1>Listing devices</h1>

<table>
  <thead>
    <tr>
      <th>Manufacturer</th>
      <th>Macaddress</th>
      <th>Group</th>
      <th>Ip</th>
      <th>Wifi</th>
      <th>Vpn</th>
      <th>User</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @devices.each do |device| %>
      <tr>
        <td><%= device.manufacturer %></td>
        <td><%= device.macaddresswifi %></td>
        <td><%= device.macaddresslan %></td>
        <td><%= device.group %></td>
        <td><%= device.ip %></td>
        <td><%= device.vpn %></td>
        <td><%= device.user_id %></td>
        <td><%= link_to 'Show', device %></td>
        <td><%= link_to 'Edit', edit_device_path(device) %></td>
        <td><%= link_to 'Destroy', device, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

